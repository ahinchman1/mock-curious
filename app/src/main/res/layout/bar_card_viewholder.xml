<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bar_list"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="16dp">

        <ImageView
                android:id="@+id/bar_avi"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/colorPrimaryDark"
                android:contentDescription="@string/content_description_bar_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/bar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:text="@string/bar_name"
                app:layout_constraintTop_toBottomOf="@id/bar_avi"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/bar_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/bar_location"
                app:layout_constraintTop_toBottomOf="@id/bar_name"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/bar_description"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/bar_description"
                app:layout_constraintTop_toBottomOf="@id/bar_location"
                app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>